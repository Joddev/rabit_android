<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".activity.sign.login.RegisterActivity">
    <!-- DONE
        edit action bar
        TODO: text box auto complete
            how? using SharedPreferences.Editor(p.714)
     -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            sl:scale_base_height="260"
            sl:scale_base_width="360">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_w"
                sl:scale_height="125"
                sl:scale_top="80"
                sl:scale_width="125" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/app"
                android:textColor="@color/basic"
                android:textStyle="bold"
                sl:scale_height="54"
                sl:scale_textsize="40"
                sl:scale_top="205"
                sl:scale_width="90" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

    </LinearLayout>



</FrameLayout>