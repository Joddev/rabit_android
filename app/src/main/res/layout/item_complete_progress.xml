<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/progress_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/progress_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progress_bar_show"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:rcMax="100"
        app:rcRadius="5dp"
        app:rcBackgroundPadding="5dp"
        app:rcReverse="false"
        app:rcProgressColor="@color/colorPrimaryDark"
        app:rcSecondaryProgressColor="@color/lightBrown"
        app:rcBackgroundColor="@color/lightGray" />

    <!--app:rcProgress="50"
    app:rcSecondaryProgress="70"-->
</LinearLayout>