<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="@color/white"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/goalWriterLayout"
            layout="@layout/item_part_goalwriter"/>

        <include
            android:id="@+id/reactionLayout"
            layout="@layout/item_part_reaction"/>

        <include
            android:id="@+id/commentGoalWriteLayout"
            layout="@layout/item_part_actions"/>

    </LinearLayout>
</android.support.v7.widget.CardView>