<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="@color/basic"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/goalLogWriterLayout"
            layout="@layout/item_part_goallogwriter"/>

        <include
            android:id="@+id/imageLayout"
            layout="@layout/item_part_image"/>

        <include
            android:id="@+id/textLayout"
            layout="@layout/item_part_text"/>

        <include
            android:id="@+id/reactionLayout"
            layout="@layout/item_part_reaction"/>

        <include
            android:id="@+id/commentGoalLogLayout1"
            layout="@layout/item_part_comment"/>

        <include
            android:id="@+id/commentGoalLogLayout2"
            layout="@layout/item_part_comment"/>

        <include
            android:id="@+id/commentGoalLogWriteLayout"
            layout="@layout/item_part_commentwrite"/>
    </LinearLayout>
</android.support.v7.widget.CardView>