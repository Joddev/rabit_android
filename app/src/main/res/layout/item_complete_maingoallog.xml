<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="@color/white"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/goal_log_writer_layout"
            layout="@layout/item_part_goallogwriter"/>

        <include
            android:id="@+id/image_layout"
            layout="@layout/item_part_image"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center_horizontal"/>

        <include
            android:id="@+id/reaction_layout"
            layout="@layout/item_part_reaction"/>

        <include
            android:id="@+id/comment_goal_log_write_layout"
            layout="@layout/item_part_actions"/>

    </LinearLayout>
</android.support.v7.widget.CardView>