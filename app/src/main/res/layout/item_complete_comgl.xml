<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="@color/basic"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/com_gl_writer_layout"
            layout="@layout/item_part_comglwriter"/>

        <include
            android:id="@+id/image_layout"
            layout="@layout/item_part_image"/>

        <include
            android:id="@+id/text_layout"
            layout="@layout/item_part_text"/>

        <include
            android:id="@+id/reaction_layout"
            layout="@layout/item_part_reaction"/>

        <include
            android:id="@+id/comment_goal_log_write_layout"
            layout="@layout/item_part_actions"/>
    </LinearLayout>
</android.support.v7.widget.CardView>