            </LinearLayout>

        </android.support.v7.widget.CardView>-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="28.7dp"
            android:layout_marginEnd="28.9dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rect"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_call_1"/>

                <EditText
                    android:id="@+id/birthText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#00000000"
                    android:hint="@string/birth"
                    android:textSize="15sp"
                    android:textColorHint="@color/darkGray"
                    android:focusable="false"
                    android:inputType="date"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/registerBtn"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="28.8dp"
            android:layout_marginBottom="20.7dp"
            android:layout_marginStart="28.7dp"
            android:layout_marginEnd="28.9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:background="@drawable/rect_brown"
            android:textColor="#fbfbfb"
            android:textSize="15.4sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="20.7dp"

        android:orientation="horizontal">


        <TextView
            android:layout_gravity="center"
            android:textSize="15.4sp"
            android:textColor="#606470"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_prompt" />

        <TextView
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:text="@string/to_login"
            android:textColor="#3277d8"
            android:textSize="15.4sp" />

    </LinearLayout>
</RelativeLayout>